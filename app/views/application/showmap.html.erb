

<div id="header" style="width:100%; height:20%; background-color:blue"> 
our wonderful header 
</div>

<div id = 'sidebar'  style="width:200px; height:80%;  background-color:red; float:left;" >

		<div id = "search box" style="height:50; background-color:green">
			<form action='showmap' method='POST'>
				Your neighbourhood:
				<input type='text' name='address' id ='address' >
				<input type='submit' name='Go!' value='Go'>
			</form>
		</div>
		<div id ="tweet_box" ></div>

</div>

<div id="map_canvas" style="width:50%; height:80%"></div>

<script>
var map = init_map("map_canvas",
                   <%= @location.latitude %>,
                   <%= @location.longitude %>);

var markers = new Array();
<% @tweets.size.times do |i| %>
    markers.push(new TweetPin(
                    map,
                    new Event("<%= @tweets[i][:title] %>",
                              <%= @tweets[i][:location][:latitude] %>,
                              <%= @tweets[i][:location][:longitude] %>)));
<% end %>

<% @fixmystreet.size.times do |i| %>
	<% coord = @fixmystreet[i].geo.split(' ') %>
	markers.push(new FixMyStreetPin(
                    map,
                    new Event("<%= @fixmystreet[i].title %>",
                              <%= coord[0] %>,
                              <%= coord[1] %>)));
<% end %>

resizeMap();

</script>
